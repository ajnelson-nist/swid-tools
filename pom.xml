    <scm>
        <connection>scm:svn:https://subversion.nist.gov/external1/NVD/assembly-swid-generator/trunk</connection>
        <developerConnection>scm:svn:https://subversion.nist.gov/external1/NVD/assembly-swid-generator/trunk</developerConnection>
