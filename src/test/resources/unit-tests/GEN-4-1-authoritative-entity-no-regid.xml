<?xml version="1.0" encoding="UTF-8"?>
<content-unit-test xmlns="http://decima.nist.gov/xml/unit-test">
	<requirement>GEN-4-1</requirement>
	<description>This test provides a valid authoritative primary tag with
		an Entity having the @role 'softwareCreator', but not the required
		@regid attribute. This will cause this test to fail.
	</description>
	<template template="classpath:templates/primary-auth-swid.xml"
		xmlns="http://decima.nist.gov/xml/template" xmlns:swid="http://standards.iso.org/iso/19770/-2/2015/schema.xsd"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
		<delete xpath="//swid:Entity" />
		<insert-child xpath="/swid:SoftwareIdentity">
			<swid:Entity name="ACME Connection Distributor" role="distributor tagCreator" />
			<swid:Entity name="ACME Connection" role="softwareCreator" />
		</insert-child>
	</template>
	<assessments>
		<schema-assessment derived-requirement="GEN-1" />
		<schematron-assessment ruleset="classpath:schematron/swid-nistir-8060.sch"
			phase="swid.primary.auth">
			<parameter name="authoritative">true</parameter>
			<parameter name="type">primary</parameter>
		</schematron-assessment>
	</assessments>
	<assertions>
		<assert-derived-requirement requirement-id="GEN-4-1"
			result="FAIL" />
		<assert-derived-requirement requirement-id="GEN-4-2"
			result="FAIL" />
		<assert-derived-requirement requirement-id="GEN-4-3"
			result="FAIL" />
		<assert-remaining quantifier="ALL" result="PASS" />
	</assertions>
</content-unit-test>