<?xml version="1.0" encoding="UTF-8"?>
<content-unit-test xmlns="http://decima.nist.gov/xml/unit-test">
	<requirement>SWID-2-1</requirement>
	<description>An valid authoritative tag with the invalid condition where
		multiple Entity @regid organizations that are tagCreator.</description>
	<template template="classpath:templates/primary-auth-swid.xml"
		xmlns="http://decima.nist.gov/xml/template" xmlns:swid="http://standards.iso.org/iso/19770/-2/2015/schema.xsd"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
		<delete xpath="//swid:Entity" />
		<insert-child xpath="/swid:SoftwareIdentity">
			<swid:Entity name="ACME Connection" regid="acme.org"
				role="softwareCreator tagCreator" xml:lang="en-US" />
			<swid:Entity name="ACME Connexion" regid="acme.org"
				role="tagCreator softwareCreator" xml:lang="en-GB" />
			<swid:Entity name="ACME Connection Publisher" regid="acme.com"
				role="publisher tagCreator" />
		</insert-child>
	</template>
	<assessments>
		<schema-assessment derived-requirement="GEN-1" />
		<schematron-assessment ruleset="classpath:schematron/swid-nistir-8060.sch"
			phase="swid.primary.auth">
			<parameter name="authoritative">true</parameter>
		</schematron-assessment>
	</assessments>
	<assertions>
		<assert-derived-requirement requirement-id="SWID-2-1"
			result="FAIL" />
		<assert-remaining quantifier="ALL" result="PASS" />
	</assertions>
</content-unit-test>