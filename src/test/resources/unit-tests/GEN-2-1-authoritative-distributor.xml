<?xml version="1.0" encoding="UTF-8"?>
<content-unit-test xmlns="http://decima.nist.gov/xml/unit-test">
  <requirement>GEN-2</requirement>
  <description>An authoritative tag produced by a distributor.</description>
  <template xmlns="http://decima.nist.gov/xml/template" xmlns:swid="http://standards.iso.org/iso/19770/-2/2015/schema.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" template="classpath:templates/primary-swid.xml">
	<modify-attribute xpath="//swid:Entity[contains(@role,'tagCreator')]/@role" value="tagCreator distributor" />
  </template>
  <assessments>
    <schematron-assessment ruleset="classpath:schematron/swid-nistir-8060.sch">
    	<parameter name="authoritative">true</parameter>
    </schematron-assessment>
  </assessments>
  <assertions>
  	<assert-overall quantifier="ALL" result="PASS"/>
  </assertions>
</content-unit-test>