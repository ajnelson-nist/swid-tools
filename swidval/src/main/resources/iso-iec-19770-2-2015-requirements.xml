    xsi:schemaLocation="http://csrc.nist.gov/ns/decima/requirements/1.0 http://csrc.nist.gov/schema/decima/requirements/decima-requirements-0.1.xsd https://csrc.nist.gov/ns/swidval/swid-requirements-ext/0.1 https://csrc.nist.gov/schema/swidval/swid-requirements-ext/swidval-swid-requirements-ext-0.1.xsd">
    <resource id="iso-iec-19770-2-2015" name="ISO/IEC 19770-2:2015" />
    <requirement id="SWID-1" swid-ext:tag-type="patch"
        swid-ext:scope="all" swid-ext:category="Tag Relationships">
        <summary>The patch tag contains a link with a @rel attribute value of "patch" pointing to the patched software.</summary>
        <reference ref="iso-iec-19770-2-2015" section="5.3.3"/>
        <statement>Every patch with a SWID tag must include a Link to the product(s) it patches and the link
            must use the rel value of “patches”.</statement>
    </requirement>
    <requirement id="SWID-2" swid-ext:tag-type="patch"
        swid-ext:scope="all" swid-ext:category="Tag Relationships">
        <summary>The patch tag contains a link with a @rel attribute value of "patch" pointing to the patched software.</summary>
        <reference ref="iso-iec-19770-2-2015" section="5.3.3"/>
        <statement>Every patch with a SWID tag must include a Link to the product(s) it patches and the link
            must use the rel value of “patches”.</statement>
    </requirement>
